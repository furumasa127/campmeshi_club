<h1>今日のイチオシレシピ</h1>
<% @recipes.each do |recipe| %>
  <%= link_to recipe.customer.name, customer_path(recipe.customer.id) %>
  <%= link_to recipe_path(recipe.id) do %>
    <%= image_tag recipe.image, size: "200x200" %>
  <% end %>
  <%= link_to recipe.dish_name, recipe_path(recipe.id) %>
<% end %>
<%= form_with url: genre_search_path, method: :get do |f| %>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= link_to genre.name, genre_search_path(genre_id: genre.id), method: :get %></td>
      </tr>
    <% end %>
<% end %>
<%= link_to "すべての商品を見る＞", recipes_path %>