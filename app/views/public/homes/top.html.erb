<div class="container-fluid">
  <h1 class="text-title d-flex justify-content-center pt-5">
    <div class="heading">
      新着レシピ
    </div>
  </h1>
  <div class="row pt-5">
    <div class="col-1"></div>
    <% @recipes.each do |recipe| %>
      <div class="d-flex flex-wrap col-lg-2 justify-content-center m-auto">
        <div class="col-12">
          <div class="text-center">
            <%= link_to recipe_path(recipe.id) do %>
              <%= image_tag recipe.image, size: "220x220" %>
            <% end %>
          </div>
        </div>
        <div class="">
          <div class="text-center pb-3">
            <%= link_to recipe.dish_name, recipe_path(recipe.id), class: "text h4" %>
          </div>
        </div>
      </div>
    <% end %>
    <div class="col-1"></div>
    <table class="genre-search table table-bordered table-hover col-lg-2">
      <tr class="table-active">
        <th class="text pl-4 text-center">ジャンル検索</th>
      </tr>
      <%= form_with url: genre_search_path, method: :get do |f| %>
          <% @genres.each do |genre| %>
            <tr>
              <td class="pl-4 text-center"><%= link_to genre.name, genre_search_path(genre_id: genre.id),class: "text", method: :get %></td>
            </tr>
          <% end %>
      <% end %>
    </table>
  </div>
  <div class="row">
    <%= link_to ">>すべての商品を見る", recipes_path, class: "btn btn-outline-secondary  mx-auto my-5" %>
  </div>
</div>