<h1>今日のイチオシレシピ</h1>
<% @recipes.each do |recipe| %>
  <%= recipe.customer.name %>
  <% if recipe.image %>
    <%= image_tag recipe.image, size: "200x200" %>
  <% end %>
  <%= recipe.dish_name %>
<% end %>
<%= form_with url: genre_search_path, method: :get do |f| %>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= link_to genre.name, genre_search_path(genre_id: genre.id), method: :get %></td>
      </tr>
    <% end %>
<% end %>
<%= link_to "すべての商品を見る＞", recipes_path %>