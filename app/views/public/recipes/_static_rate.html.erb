<div id="star_<%= recipe.id %>" class="mx-3"></div>
<script>
$(document).on('turbolinks:load', function() {
  let elem = document.querySelector('#star_<%= recipe.id %>');
  if (elem == null) return;

  elem.innerHTML = "";
  let opt = {
    starOn: "<%= asset_path('star-on.png') %>",
    starOff: "<%= asset_path('star-off.png') %>",
    score: "<%= recipe.difficulty %>",
    score: <%= @recipe.difficulty %>,
    scoreName: 'recipe[difficulty]',
  };
  raty(elem, opt);
});
</script>