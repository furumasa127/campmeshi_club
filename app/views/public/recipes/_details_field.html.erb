<div class="details-field row align-items-center pt-4">
  <%= f.hidden_field :_destroy %>
  <div class="col-3"></div>
  <div class="col-4">
    <div class="form-group">
      <%= f.text_field :ingredient, placeholder: "材料名", class: 'form-control light-placeholder' %>
    </div>
  </div>
  <div class="col-2">
    <div class="form-group">
      <%= f.text_field :quantity, placeholder: "分量", class: "form-control light-placeholder" %>
    </div>
  </div>
  <div class="col-auto">
    <button type="button" class="btn btn-danger remove-details mb-3">
      <i class="fas fa-trash-alt"></i>
    </button>
  </div>
</div>

<script>
   $(document).on('turbolinks:load', function() {
    $(document).on('click', '.remove-details', function(){
      $(this).closest('.details-field').find("input[name$='[_destroy]']").val('true');
      $(this).closest('.details-field').hide();
    });
  });
</script>