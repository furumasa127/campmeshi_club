<h3>
  <%= @customer.name %>
</h3>
<h3>follows</h3>
<%= link_to @customer.followings.count, customer_followings_path(@customer) %>
<h3>followers</h3>
<%= link_to @customer.followers.count, customer_followers_path(@customer) %>
<div class="row">
  <% if current_customer != @customer %>
    <td><%= render "/public/relationships/btn", customer: @customer, options: { class: ""} %></td>
  <% else %>
    <%= link_to edit_customer_path(@customer), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% end %>
</div>
<h3>
  <% if @customer.image.attached? %>
  <%= image_tag @customer.image, size: "150x150" %>
<% else %>
  <%= image_tag 'no_image', size: "150x" %>
<% end %>
</h3>
<h4>投稿レシピ</h4>
<% @recipes.each do |recipe| %>
  <h4>投稿日</h4>
  <%= recipe.created_at.strftime('%Y/%m/%d') %>
  <%= recipe.cooking_time %>分
  <h4>難易度</h4>
  <div id="difficulty_<%= recipe.id %>"></div>
  <script>
    $(document).on('turbolinks:load', function() {
      let elem = document.querySelector('#difficulty_<%= recipe.id %>');
      if (elem == null) return;

      elem.innerHTML = "";
      let opt = {
        starOn: "<%= asset_path('star-on.png') %>",
        starOff: "<%= asset_path('star-off.png') %>",
        score: "<%= recipe.difficulty %>",
        readOnly: true,
      };
      raty(elem, opt);
    });
  </script>
  <%= recipe.customer.name %>
  <%= recipe.dish_name %>
  <%= recipe.explanation %>
  <% if recipe.image %>
    <%= image_tag recipe.image, size: "200x200" %>
  <% end %>
<% end %>
<%= paginate(@recipes) %>
<% if current_customer.id == @customer.id %>
  <div>
    <%= link_to "退会する", customers_unsubscribe_path(@customer.id), class: "btn btn-danger mt-4" %>
    <%= link_to "いいね履歴", likes_customers_path %>
  </div>
<% end %>

<% if @like_list.present? %>
  <% @like_list.each do |recipe| %>
    <%= recipe.dish_name %>
    <% end %>
<% end %>