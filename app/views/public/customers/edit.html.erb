<div class="fullheight container">
  <h3 class="text-title d-flex justify-content-center pt-5 pb-3">会員情報編集</h3>
  <%= form_with model: @customer do |f| %>
    <div class="row">
      <div class="col-lg-3"></div>
      <div class="text col-lg-2 text-left mt-4">
        <label>ユーザ名</label>
      </div>
      <div class="text col-lg-5 mt-3 pl-5 ">
        <%= f.file_field :image, accept: "image/*" %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-3"></div>
      <div class="text col-lg-2 text-left mt-4">
        <label>メールアドレス</label>
      </div>
      <div class="form-label col-lg-5 mt-3 pl-5">
        <%= f.text_field :email, class: "form-control col-lg-10" %>
      </div>
    </div>
    <div class="actions d-flex justify-content-center pt-5 pb-3">
      <%= f.submit '保存する', class: "btn btn-success mr-5" %>
    </div>
  <% end %>
</div>