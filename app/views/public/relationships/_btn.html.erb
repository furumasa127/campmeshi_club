<% if current_customer != customer %>
  <% if current_customer.following?(customer) %>
    <%= link_to "フォロー中", customer_relationships_path(customer.id), method: :delete, class: options[:class].presence || "btn btn-info" %>
  <% else %>
    <%= link_to "フォローする", customer_relationships_path(customer.id), method: :past, class: options[:class].presence || "btn btn-success" %>
  <% end %>
<% end %>