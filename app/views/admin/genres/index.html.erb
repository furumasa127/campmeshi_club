<div class="container">
  <h4 class="text-title d-flex justify-content-center pt-4 pb-4">ジャンル一覧・追加</h4>
  <%=form_with model: @genre,url: admin_genres_path, method: :post do |f| %>
    <div class="row pt-5">
      <div class="col-3"></div>
      <div class="ml-5">
        <%= f.label :"ジャンル名", class: "text mr-3" %>
      </div>
      <div class="ml-5">
        <%= f.text_field :name, placeholder: "ジャンル名", class: "form-control" %>
      </div>
      <td><%= f.submit'新規登録',class: "btn btn-success ml-5" %></td>
    </div>
  <% end %>
  <div class="row">
    <div class="col-4"></div>
    <table class="table table-bordered table-hover  col-4 mt-5 ml-3">
      <tr>
        <th class="text table-active">ジャンル</th>
      </tr>
      <% @genres.each do |genre| %>
        <tr>
          <td class="d-flex">
            <div class="text col-7">
              <%= genre.name %>
            </div>
            <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
          </td>
        </tr>
      <%end%>
    </table>
  </div>
</div>
