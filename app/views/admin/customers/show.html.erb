<div class="fullheight container">
  <h3 class="text-title d-flex justify-content-center pt-4 pb-4"><%= @customer.name %>さんの詳細ページ</h3>

  <div class="row">
    <div class="col-4"></div>
    <div class="text col-2 mb-4">会員ID</div>
    <div class="text"><%= @customer.id %></div>
  </div>

  <div class="row">
    <div class="col-4"></div>
    <div class="text col-2 mb-4">ユーザ名</div>
    <div class="text"><%= @customer.name %></div>
  </div>

  <div class="row">
    <div class="col-4"></div>
    <div class="text col-2 mb-4">メールアドレス</div>
    <div class="text"><%= @customer.email %></div>
  </div>
  <div class="row">
    <div class="col-4"></div>
    <div class="text col-2 mb-4">会員ステータス</div>
    <% if @customer.is_active %>
      <p class="text-success"><strong>有効</strong></p>
    <% elsif %>
      <p class="text-muted"><strong>退会</strong></p>
    <% end %>
  </div>
  <div class="d-flex justify-content-center">
    <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success mr-5" %>
  </div>
</div>