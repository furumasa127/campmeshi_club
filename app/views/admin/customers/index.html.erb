<div class="container">
  <h2 class="text-title d-flex justify-content-center pt-5">会員一覧</h2>
  <table class="table table-hover table-inverse">
    <tr class="table-active">
      <th class="col-1">会員ID</th>
      <th class="col-2">ユーザ名</th>
      <th class="col-2">メールアドレス</th>
      <th class="col-2">ステータス</th>
    </tr>
    <% @customers.each do |customer| %>
      <tr>
        <td class="text">
          <%= customer.id %>
        </td>
        <td>
          <%= link_to customer.name, admin_customer_path(customer.id),class: "text" %>
        </td>
        <td class="text">
          <%= customer.email %>
        </td>
        <td>
          <% if customer.is_active %>
            <p class="text-success"><strong>有効</strong></p>
          <% elsif %>
            <p class="text-muted"><strong>退会</strong></p>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
  <div class="d-flex justify-content-center">
    <%= paginate(@customers) %>
  </div>
</div>