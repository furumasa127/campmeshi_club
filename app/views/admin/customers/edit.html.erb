<div class="fullheight container">
  <h3 class="text-title d-flex justify-content-center pt-4 pb-4"><%= @customer.name %>さんの会員情報編集</h3>
  <%= form_with model: [:admin,@customer] do |f| %>
      <div class="row">
        <div class="col-4"></div>
        <div class="text col-2 mb-3">
          <%= f.label :"会員ID" %>
        </div>
        <div class="text mb-3">
          <%= @customer.id %>
        </div>
      </div>
  
      <div class="row">
        <div class="col-4"></div>
        <div class="text col-2 mb-3">
          <%= f.label :"ユーザ名" %>
        </div>
        <div class="mb-3">
          <%= f.text_field :name %>
        </div>
      </div>
  
      <div class="row">
        <div class="col-4"></div>
        <div class="text col-2 mb-3">
          <%= f.label :"メールアドレス" %>
        </div>
        <div class="mb-3">
          <%= f.text_field :email %>
        </div>
      </div>
  
      <div class="row">
        <div class="col-4"></div>
        <div class="text col-2 mb-3">
          <%= f.label :"会員ステータス" %>
        </div>
        <div class="text mb-3">
          <%= f.radio_button :is_active, "true" %>
          <%= f.label :is_active_valid, "有効", :class => "mr-5" %>
          <%= f.radio_button :is_active, "false" %>
          <%= f.label :is_active_sale_Withdrawal, "退会" %>
        </div>
      </div>
  
      <div class="d-flex justify-content-center">
        <%= f.submit '変更を保存', class: "btn btn-success" %>
      </div>
  <% end %>
</div>