<div class="fullheight container">
  <h2 class="text-title d-flex justify-content-center pt-5 pb-3">管理者ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-3"></div>
      <div class="text col-2 text-left mt-4">
        <label>メールアドレス</label>
      </div>
      <div class="form-label col-5 mt-3 pl-5 ">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-3"></div>
      <div class="text col-2 text-left mt-4">
        <label>パスワード</label>
      </div>
      <div class="form-label col-5 mt-3 pl-5">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>
    </div>
    <div class="actions d-flex justify-content-center pt-5 pb-3">
      <%= f.submit "ログイン", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
