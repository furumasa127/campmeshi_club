<div class="fullheight container pb-5">
  <h3 class="d-flex justify-content-center pt-5 pb-5">コメント一覧</h3>
  <table class="text table table-bordered table-hover">
    <tr class="text table-active">
      <th>名前</th>
      <th>料理名</th>
      <th>コメント</th>
      <th>投稿日</th>
      <th></th>
    </tr>

    <% @comments.each do |comment| %>
      <tr>
        <td><%= @customers.find(comment.customer_id).name %></td>
        <td><%= @recipes.find(comment.recipe_id).dish_name %></td>
        <td><%= comment.comment %></td>
        <td><%= comment.created_at.strftime('%Y/%m/%d') %></td>
        <td>
          <%= link_to "削除", admin_comment_path(comment), method: :delete, data: { confirm: '本当に削除しますか？' },class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </table>
</div>