<div class="container">
  <h3 class="text-title d-flex justify-content-center pt-5 -b-5">レシピ一覧</h3>
  <div class="row">
    <%= link_to "コメント一覧へ", admin_comments_path, class: "text btn btn-outline-secondary mb-3 mr-5 ml-auto" %>
  </div>
  <div class="row">
    <div class="col-2"></div>
    <table class="table table-hover table-inverse col-9">
      <tr class="table-active">
        <th class="text col-1">レシピID</th>
        <th class="text col-2">投稿日</th>
        <th class="text col-2">レシピ名</th>
        <th class="text col-2">ユーザ名</th>
        <th class="text col-2"></th>
      </tr>
      <% @recipes.each do |recipe| %>
        <tr>
          <td class="text">
            <%= recipe.id %>
          </td>
          <td class="text">
            <%= recipe.created_at.strftime('%Y/%m/%d') %>
          </td>
          <td class="text">
            <%= recipe.dish_name %>
          </td>
          <td class="text">
           <%= recipe.customer.name %>
          </td>
          <td>
            <%= link_to "削除する", admin_recipe_path(recipe.id), method: :delete, "data-confirm" => "投稿を削除しますか？", class: "btn btn-danger"%>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
  <div class="d-flex justify-content-center mb-4">
    <%= paginate(@recipes) %>
  </div>
</div>